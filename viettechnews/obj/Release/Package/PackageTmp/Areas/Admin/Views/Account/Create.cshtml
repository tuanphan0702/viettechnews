@model Model.EF.Nguoidung

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}


<div class="col-lg-12">
    <div class="card">
        <div class="card-header d-flex align-items-center">
            <h4>Thêm Account</h4>
        </div>
        <div class="card-body">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">

                    @Html.ValidationSummary(true)
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                @Html.Label("UserName", new { @class = "control-label" })
                            </div>
                            <div class="col-md-2">
                                @Html.TextBoxFor(model => model.Username, new { @class = "form-control textbox-control" })
                                @Html.ValidationMessageFor(model => model.Username)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                @Html.Label("Password", new { @class = "control-label" })
                            </div>
                            <div class="col-md-2">
                                @Html.PasswordFor(model => model.Password, new { @class = "form-control textbox-control" })
                                @Html.ValidationMessageFor(model => model.Password)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                @Html.Label("FullName", new { @class = "control-label" })
                            </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.Fullname, new { @class = "form-control textbox-control" })
                                @Html.ValidationMessageFor(model => model.Fullname)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                @Html.Label("Email", new { @class = "control-label" })
                            </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.Email, new { @class = "form-control textbox-control" })
                                @Html.ValidationMessageFor(model => model.Email)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                @Html.Label("Hình Ảnh", new { @class = "control-label" })
                            </div>
                            <div class="col-md-4">
                                @Html.TextBoxFor(model => model.Avatar, new { @class = "form-control textbox-control" })
                                @Html.ValidationMessageFor(model => model.Avatar)
                            </div>
                            <div class="col-md-2">
                                <input type="button" id="Browse" value="..." class="btn btn-default" />
                            </div>
                            <script>
                                $("#Browse").click(function () {
                                    var finder = new CKFinder();
                                    finder.selectActionFunction = function (fileUrl) {
                                        $("#Picture").val(fileUrl)
                                    };
                                    finder.popup();
                                });
                            </script>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                @Html.Label("Is Admin", new { @class = "control-label" })
                            </div>
                            <div class="col-md-4">
                                @Html.CheckBoxFor(model => model.isAdmin)
                                @Html.ValidationMessageFor(model => model.isAdmin)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-md-2">
                                @Html.Label("Status", new { @class = "control-label" })
                            </div>
                            <div class="col-md-2">
                                @Html.CheckBoxFor(model => model.isAdmin)
                                @Html.ValidationMessageFor(model => model.isAdmin)
                            </div>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Create" class="btn btn-primary">
                        </div>
                    </div>
                </div>
            }

            <div>
                @Html.ActionLink("Quay về", "Index")
            </div>
        </div>
    </div>
</div>